{% extends "producer/dashboard/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.producer_dashboard_index_item_products }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.producer_dashboard_products_new_body_message }}
            </p>
        </div>
    </div>
    
    {% for error in errors %}
            
    <div class="row alert alert-danger">
        <div class="col-lg-12">
            {{ error }}
        </div>
    </div>
            
    {% endfor %}
            
    <div class="row">
        <div class="col-lg-4">
            <form method="POST" enctype="multipart/form-data"
                  action="/app/producer/dashboard/products/new">    
                <h3>
                    {{ labels.producer_dashboard_products_new_form_header }}
                </h3>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_products_new_form_name }}</label>
                    <input name="name" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_products_new_form_description }}</label>
                    <input name="description" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_products_new_form_price }}</label>
                    <input type="number" step="0.01" name="price" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_products_new_form_stock }}</label>
                    <input type="number" name="stock" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_products_new_form_file }}</label>
                    <input type="file" name="file" class="form-control" required autofocus>
                </div>                    
                <button type="submit" onclick="isNumeric('!')" class="btn btn-default">{{ labels.producer_dashboard_products_new_form_button_submit }}</button>
            </form>  
        </div>
    </div>
{% endblock %}