{% extends "producer/dashboard/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.producer_dashboard_index_item_products }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.producer_dashboard_products_body_message }}
            </p>
        </div>
    </div>
            
    <div class="row">
        <div class="col-lg-12">
            <a href="/app/producer/dashboard/products/new" class="btn btn-default">
                {{ labels.producer_dashboard_products_button_new }}
            </a>
        </div>
    </div>
            
    <div class="row">
        <div class="col-lg-12">
            {% if products is empty %}
                <p>
                    {{ labels.producer_dashboard_products_table_nocontent }}
                </p>
            {% else %}
                <div class="table-responsive">            
                    <table class="table table-hover table-striped submitted-photos-table">
                        <thead>
                            <tr>
                                <th>
                                    {{ labels.producer_dashboard_products_table_name }}                                    
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_products_table_picture }}                                    
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_products_table_price }}
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_products_table_stock }}
                                </th>
                            </tr>
                        </thead>
                        <tbody>                     
                            {% for product in products %}
                            <tr>                                    
                                <td>
                                    {{ product.name }}
                                </td>
                                <td>
                                    <a class="fancybox" href="/assets/products/img/{{ product.filename }}">
                                        <img src="/assets/products/img/{{ product.filename }}"/>
                                    </a>
                                </td>
                                <td>
                                    {{ product.price }}
                                </td>
                                <td>
                                    {{ product.stock }}
                                </td>
                                <td>
                                    <a href="/app/producer/dashboard/products">
                                            <i class="fa fa-gears"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/app/producer/dashboard/products">
                                            <i class="fa fa-ban"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}