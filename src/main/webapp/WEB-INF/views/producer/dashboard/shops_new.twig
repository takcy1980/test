{% extends "producer/dashboard/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.producer_dashboard_index_item_shops }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.producer_dashboard_shops_new_body_message }}
            </p>
        </div>
    </div>
    
    {% for error in errors %}
            
    <div class="row alert alert-danger">
        <div class="col-lg-12">
            {{ error }}
        </div>
    </div>
            
    {% endfor %}
            
    <div class="row">
        <div class="col-lg-4">
            <form action="" method="post" role="form">
                
                <h3>
                    {{ labels.producer_dashboard_shops_new_form_header_store }}
                </h3>
                <div class="form-group">
                    <label>
                        {{ labels.producer_dashboard_shops_new_form_store_login }}
                    </label>
                    <input name="login" class="form-control">
                </div>
                <div class="form-group">
                    <label>
                        {{ labels.producer_dashboard_shops_new_form_store_password }}
                    </label>
                    <input name="passwordHash" class="form-control">
                </div>
                    
                <h3>
                    {{ labels.producer_dashboard_shops_new_form_header_photographer }}
                </h3>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_shops_new_form_photographer_name }}</label>
                    <input name="name" class="form-control">
                </div>
                    <div class="form-group">
                    <label>{{ labels.producer_dashboard_shops_new_form_photographer_address }}</label>
                    <input name="address" class="form-control">
                </div>
                    <div class="form-group">
                    <label>{{ labels.producer_dashboard_shops_new_form_photographer_city }}</label>
                    <input name="city" class="form-control">
                </div>
                <div class="form-group">
                    <label>{{ labels.producer_dashboard_shops_new_form_photographer_email }}</label>
                    <input name="email" class="form-control">
                </div>
                    <div class="form-group">
                    <label>{{ labels.producer_dashboard_shops_new_form_photographer_phone }}</label>
                    <input name="phone" class="form-control">
                </div>
                    
                <button type="submit" class="btn btn-default">{{ labels.producer_dashboard_shops_new_form_button_submit }}</button>
            </form>
        </div>
    </div>
{% endblock %}