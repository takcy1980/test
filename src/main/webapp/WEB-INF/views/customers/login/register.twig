{% extends "common/bootstrap.twig" %}

{% block title %}
    {{ labels.producer_login_page_title }}
{% endblock %}

{% block more_css %}
    <link href="/assets/common/css/default.css" rel="stylesheet"/>
    <link href="/assets/customers/css/login.css" rel="stylesheet"/>
    <link href="/assets/common/css/bootstrap/sb-admin/font-awesome/css/font-awesome.min.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    
        <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/app/"><i class="fa fa-home"></i> Home</a></li>
                    <li><a href="/app/customers/shop"><i class="fa fa-user"></i> Login</a></li>
                </ul>
            </div>




            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    
    <div class="container">
        {% for error in errors %}
        <div class="row alert alert-danger">
            <div class="col-lg-12">
                {{ error }}
            </div>
        </div>
        {% endfor %}
 
        <form class="form-signin" method="post" role="form">
    
            <h2 class="form-signin-heading">
                {{ labels.customer_register_register_label }}:
            </h2>
            <label for="name" class="sr-only">
                {{ labels.customer_register_name_label }}:
            </label>
            <input type="text" id="customer_name" name="name" class="form-control" placeholder="{{ labels.customer_register_name_label }}" required autofocus>

            <label for="address" class="sr-only">
                {{ labels.customer_register_address_label }}:
            </label>
            <input type="text" id="customer_address" name="address" class="form-control" placeholder="{{ labels.customer_register_address_label }}" required autofocus>

            <label for="city" class="sr-only">
                {{ labels.customer_register_city_label }}:
            </label>
            <input type="text" id="customer_city" name="city" class="form-control" placeholder="{{ labels.customer_register_city_label }}" required autofocus>

            <label for="phone" class="sr-only">
                {{ labels.customer_register_phone_label }}:
            </label>
            <input type="number" id="customer_phone" name="phone" class="form-control" placeholder="{{ labels.customer_register_phone_label }}" required autofocus>

            <label for="email" class="sr-only">
                {{ labels.customer_register_email_label }}:
            </label>
            <input type="email" id="customer_email" name="email" class="form-control" placeholder="{{ labels.customer_register_email_label }}" required autofocus>
         

            <label>
                {{ labels.customer_login_loginname_label }}
            </label>
            <input name="login" class="form-control"  required autofocus>

            <label>
                {{ labels.customer_login_password_label }}:
            </label>
            <input type="password" id="inputPassword" class="form-control" 
                   required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" name="passwordHash"  onchange="form.repeatPassword.pattern = this.value;">
            
             <label>
                Repeat password
            </label>
            <input type="password" id="inputPassword" name="repeatPassword" class="form-control" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">

        
            <button class="btn btn-lg btn-default btn-block" type="submit">
                {{ labels.customer_register_register_button }}
            </button>
        </form>
    </div>

    {% include "common/snippets/language_bar.twig" %}

{% endblock %}
